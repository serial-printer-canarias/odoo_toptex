<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_toptex_brand_tree" model="ir.ui.view">
        <field name="name">toptex.brand.tree</field>
        <field name="model">toptex.brand</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="toptex_id"/>
            </tree>
        </field>
    </record>

    <record id="view_toptex_brand_form" model="ir.ui.view">
        <field name="name">toptex.brand.form</field>
        <field name="model">toptex.brand</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="import_brands" type="object" string="Importar marcas" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="toptex_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_toptex_brand" model="ir.actions.act_window">
        <field name="name">Marcas de Toptex</field>
        <field name="res_model">toptex.brand</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_toptex_root" name="Toptex"/>

    <menuitem id="menu_toptex_brand" name="Marcas" parent="menu_toptex_root" action="action_toptex_brand"/>
</odoo>