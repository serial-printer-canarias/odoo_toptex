<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista tipo tree (lista) -->
    <record id="view_toptex_brand_tree" model="ir.ui.view">
        <field name="name">toptex.brand.tree</field>
        <field name="model">toptex.brand</field>
        <field name="arch" type="xml">
            <tree string="Marcas de Toptex">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Vista tipo form -->
    <record id="view_toptex_brand_form" model="ir.ui.view">
        <field name="name">toptex.brand.form</field>
        <field name="model">toptex.brand</field>
        <field name="arch" type="xml">
            <form string="Marca Toptex">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_toptex_brand" model="ir.actions.act_window">
        <field name="name">Marcas</field>
        <field name="res_model">toptex.brand</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menú -->
    <menuitem id="menu_toptex_brand"
              name="Marcas"
              parent="menu_toptex_root"
              action="action_toptex_brand"/>
</odoo>