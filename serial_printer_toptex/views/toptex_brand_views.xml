<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_toptex_brand_tree" model="ir.ui.view">
        <field name="name">toptex.brand.tree</field>
        <field name="model">toptex.brand</field>
        <field name="arch" type="xml">
            <tree string="Marcas de Toptex">
                <field name="name"/>
                <field name="toptex_id"/>
            </tree>
        </field>
    </record>

    <record id="view_toptex_brand_form" model="ir.ui.view">
        <field name="name">toptex.brand.form</field>
        <field name="model">toptex.brand</field>
        <field name="arch" type="xml">
            <form string="Marca de Toptex">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="toptex_id"/>
                    </group>
                    <footer>
                        <button name="import_brands"
                                string="Importar marcas"
                                type="object"
                                class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_toptex_brand" model="ir.actions.act_window">
        <field name="name">Marcas Toptex</field>
        <field name="res_model">toptex.brand</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_toptex_root"
              name="Toptex"
              sequence="10"/>

    <menuitem id="menu_toptex_brand"
              name="Marcas"
              parent="menu_toptex_root"
              action="action_toptex_brand"
              sequence="20"/>
</odoo>