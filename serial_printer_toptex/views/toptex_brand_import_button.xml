<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="toptex_brand_tree_view" model="ir.ui.view">
        <field name="name">toptex.brand.tree</field>
        <field name="model">toptex.brand</field>
        <field name="arch" type="xml">
            <tree string="Marcas de Toptex">
                <field name="name"/>
                <field name="toptex_id"/>
            </tree>
        </field>
    </record>

    <record id="toptex_brand_action" model="ir.actions.act_window">
        <field name="name">Marcas Toptex</field>
        <field name="res_model">toptex.brand</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="toptex_brand_menu" name="Marcas Toptex"
              parent="base.menu_custom"
              action="toptex_brand_action" sequence="10"/>
</odoo>