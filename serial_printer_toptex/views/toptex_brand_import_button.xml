<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista base del formulario -->
    <record id="view_toptex_brand_form_base" model="ir.ui.view">
        <field name="name">toptex.brand.form.base</field>
        <field name="model">toptex.brand</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="toptex_id"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Vista heredada con el botÃ³n -->
    <record id="view_toptex_brand_form" model="ir.ui.view">
        <field name="name">toptex.brand.form</field>
        <field name="model">toptex.brand</field>
        <field name="inherit_id" ref="view_toptex_brand_form_base"/>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="import_brands"
                            string="Importar Marcas"
                            type="object"
                            class="btn-primary"/>
                </header>
            </form>
        </field>
    </record>
</odoo>