<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <menuitem id="menu_toptex_root" name="TOPTEX"/>
    
    <menuitem id="menu_toptex_brand"
              name="Marcas"
              parent="menu_toptex_root"
              action="action_toptex_brand"/>
              
    <record id="action_toptex_brand" model="ir.actions.act_window">
        <field name="name">Marcas Toptex</field>
        <field name="res_model">toptex.brand</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_form_toptex_brand" model="ir.ui.view">
        <field name="name">toptex.brand.form</field>
        <field name="model">toptex.brand</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="import_brands" string="Importar marcas"
                            type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="toptex_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>