<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Acción para abrir vista de marcas -->
    <record id="action_toptex_brand" model="ir.actions.act_window">
        <field name="name">Brands</field>
        <field name="res_model">toptex.brand</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menú raíz de Toptex -->
    <menuitem id="menu_toptex_root" name="Toptex" sequence="10"/>

    <!-- Submenú de Marcas -->
    <menuitem id="menu_toptex_brand"
              name="Brands"
              parent="menu_toptex_root"
              action="action_toptex_brand"/>
</odoo>