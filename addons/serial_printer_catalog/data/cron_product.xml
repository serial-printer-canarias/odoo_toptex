<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="cron_sync_products_from_api" model="ir.cron">
        <field name="name">Sincronizar productos desde API</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="state">code</field>
        <field name="code">model.sync_products_from_api()</field>
        <field name="interval_number">12</field>
        <field name="interval_type">hours</field>
        <field name="active">True</field>
    </record>

    <record id="cron_sync_stock_from_api" model="ir.cron">
        <field name="name">Sincronizar stock desde API</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="state">code</field>
        <field name="code">model.sync_stock_from_api()</field>
        <field name="interval_number">3</field>
        <field name="interval_type">hours</field>
        <field name="active">True</field>
    </record>
</odoo>