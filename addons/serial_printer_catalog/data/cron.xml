<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Sincronizar marcas -->
    <record id="cron_sync_brands" model="ir.cron">
        <field name="name">Sincronizar Marcas</field>
        <field name="model_id" ref="model_serial_printer_brand"/>
        <field name="state">code</field>
        <field name="code">model.sync_brands_from_api()</field>
        <field name="interval_number">3</field>
        <field name="interval_type">hours</field>
        <field name="active">True</field>
    </record>

