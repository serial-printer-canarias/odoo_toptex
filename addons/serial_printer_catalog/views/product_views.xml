<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_serial_printer_product_form" model="ir.ui.view">
        <field name="name">serial.printer.product.form</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <form string="Producto del Catálogo">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="default_code"/>
                        <field name="list_price"/>
                        <field name="standard_price"/>
                        <field name="image_1920" widget="image"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_serial_printer_product" model="ir.actions.act_window">
        <field name="name">Ver productos</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_catalog_root" name="Catálogo" sequence="10"/>
    <menuitem id="menu_catalog_products" name="Productos" parent="menu_catalog_root" sequence="20"/>
    <menuitem id="menu_catalog_products_list" name="Ver productos"
              parent="menu_catalog_products"
              action="action_serial_printer_product"
              sequence="30"/>
</odoo>