<odoo>
    <record id="view_product_template_list_toptex" model="ir.ui.view">
        <field name="name">product.template.list.toptex</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="default_code"/>
                <field name="toptex_id"/>
                <field name="toptex_sku"/>
                <field name="list_price"/>
            </tree>
        </field>
    </record>

    <record id="view_product_template_form_toptex" model="ir.ui.view">
        <field name="name">product.template.form.toptex</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="default_code"/>
                        <field name="toptex_id"/>
                        <field name="toptex_sku"/>
                        <field name="list_price"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>