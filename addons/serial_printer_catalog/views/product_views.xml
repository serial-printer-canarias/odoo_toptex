<odoo>
    <record id="view_product_form_sp" model="ir.ui.view">
        <field name="name">serial.printer.product.form</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <form string="Producto">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="default_code"/>
                        <field name="qty_available"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="serial_printer_product_menu"
              name="Productos"
              parent="menu_serial_printer_root"/>

    <record id="action_serial_printer_product" model="ir.actions.act_window">
        <field name="name">Productos</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">form</field>
    </record>

    <menuitem id="menu_serial_printer_product_action"
              parent="serial_printer_product_menu"
              action="action_serial_printer_product"/>
</odoo>