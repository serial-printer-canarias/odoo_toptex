<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_serial_printer_product_list" model="ir.ui.view">
        <field name="name">serial.printer.product.list</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="default_code"/>
                <field name="external_code"/>
                <field name="list_price"/>
                <field name="qty_available"/>
            </list>
        </field>
    </record>

    <record id="action_serial_printer_product_list" model="ir.actions.act_window">
        <field name="name">Productos</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">list</field>
        <field name="domain">[('external_code', '!=', False)]</field>
    </record>
</odoo>