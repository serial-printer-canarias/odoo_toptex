
<odoo>
    <record id="view_serial_printer_product_list" model="ir.ui.view">
        <field name="name">serial_printer.product.list</field>
        <field name="model">serial_printer.product</field>
        <field name="arch" type="xml">
            <list>
                <header>
                    <button name="import_toptex_products"
                            type="object"
                            string="Importar productos"
                            class="btn-primary"/>
                </header>
                <field name="name"/>
                <field name="reference"/>
                <field name="brand_id"/>
                <field name="color"/>
                <field name="size"/>
            </list>
        </field>
    </record>

    <record id="action_serial_printer_product" model="ir.actions.act_window">
        <field name="name">Productos</field>
        <field name="res_model">serial_printer.product</field>
        <field name="view_mode">list</field>
    </record>

    <record id="serial_printer_product_rule" model="ir.rule">
        <field name="name">Acceso productos</field>
        <field name="model_id" ref="model_serial_printer_product"/>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>
</odoo>
