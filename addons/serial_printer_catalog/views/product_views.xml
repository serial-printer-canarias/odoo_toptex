<odoo>
    <record id=“view_product_list_serial_printer” model=“ir.ui.view”>
        <field name=“name”>serial.printer.product.list</field>
        <field name=“model”>serial.printer.product</field>
        <field name=“arch” type=“xml”>
            <list string=“Productos”>
                <field name=“reference”/>
                <field name=“name”/>
                <field name=“brand”/>
                <field name=“color”/>
                <field name=“size”/>
                <field name=“stock”/>
            </list>
        </field>
    </record>

    <record id=“action_serial_printer_products” model=“ir.actions.act_window”>
        <field name=“name”>Productos</field>
        <field name=“res_model”>serial.printer.product</field>
        <field name=“view_mode”>list</field>
    </record>

    <menuitem id=“menu_serial_printer_products”
              name=“Productos”
              parent=“menu_serial_printer_catalog”
              action=“action_serial_printer_products”/>
</odoo>