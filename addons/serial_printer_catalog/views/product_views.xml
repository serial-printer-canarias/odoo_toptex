<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista heredada para agregar campos al formulario de producto -->
    <record id="view_product_form_inherit_api" model="ir.ui.view">
        <field name="name">product.template.form.inherit.api</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="API Info">
                    <group>
                        <field name="external_id"/>
                        <field name="synced_from_api"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>