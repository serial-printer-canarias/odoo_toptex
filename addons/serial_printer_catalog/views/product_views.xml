<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_tree_serial_printer_product" model="ir.ui.view">
        <field name="name">serial.printer.product.tree</field>
        <field name="model">serial.printer.product</field>
        <field name="arch" type="xml">
            <list string="Productos">
                <field name="name"/>
                <field name="toptex_id"/>
            </list>
        </field>
    </record>

    <record id="view_form_serial_printer_product" model="ir.ui.view">
        <field name="name">serial.printer.product.form</field>
        <field name="model">serial.printer.product</field>
        <field name="arch" type="xml">
            <form string="Producto">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="toptex_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_serial_printer_product" model="ir.actions.act_window">
        <field name="name">Productos</field>
        <field name="res_model">serial.printer.product</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>