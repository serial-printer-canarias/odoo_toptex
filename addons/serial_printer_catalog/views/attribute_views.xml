<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista de lista -->
    <record id="view_serial_printer_attribute_tree" model="ir.ui.view">
        <field name="name">serial.printer.attribute.tree</field>
        <field name="model">serial.printer.attribute</field>
        <field name="arch" type="xml">
            <tree string="Atributos">
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <!-- Vista de formulario -->
    <record id="view_serial_printer_attribute_form" model="ir.ui.view">
        <field name="name">serial.printer.attribute.form</field>
        <field name="model">serial.printer.attribute</field>
        <field name="arch" type="xml">
            <form string="Atributo">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n -->
    <record id="action_serial_printer_attribute_list" model="ir.actions.act_window">
        <field name="name">Atributos</field>
        <field name="res_model">serial.printer.attribute</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>