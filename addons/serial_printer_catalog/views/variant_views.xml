<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista de lista -->
    <record id="view_serial_printer_variant_tree" model="ir.ui.view">
        <field name="name">serial.printer.variant.tree</field>
        <field name="model">serial.printer.variant</field>
        <field name="arch" type="xml">
            <tree string="Variantes">
                <field name="sku"/>
                <field name="color"/>
                <field name="size"/>
                <field name="stock_quantity"/>
            </tree>
        </field>
    </record>

    <!-- Vista de formulario -->
    <record id="view_serial_printer_variant_form" model="ir.ui.view">
        <field name="name">serial.printer.variant.form</field>
        <field name="model">serial.printer.variant</field>
        <field name="arch" type="xml">
            <form string="Variante">
                <sheet>
                    <group>
                        <field name="sku"/>
                        <field name="color"/>
                        <field name="size"/>
                        <field name="stock_quantity"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n -->
    <record id="action_serial_printer_variant_list" model="ir.actions.act_window">
        <field name="name">Variantes</field>
        <field name="res_model">serial.printer.variant</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>