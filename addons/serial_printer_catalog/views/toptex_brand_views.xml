
<odoo>
    <record id="view_serial_printer_brand_list" model="ir.ui.view">
        <field name="name">serial_printer.brand.list</field>
        <field name="model">serial_printer.brand</field>
        <field name="arch" type="xml">
            <list>
                <header>
                    <button name="import_toptex_brands"
                            type="object"
                            string="Importar marcas"
                            class="btn-primary"/>
                </header>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_serial_printer_brand_form" model="ir.ui.view">
        <field name="name">serial_printer.brand.form</field>
        <field name="model">serial_printer.brand</field>
        <field name="arch" type="xml">
            <form string="Marca externa">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_serial_printer_brand" model="ir.actions.act_window">
        <field name="name">Marcas Externas</field>
        <field name="res_model">serial_printer.brand</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
