<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Vista lista (list, no tree) -->
        <record id="view_list_serial_printer_token" model="ir.ui.view">
            <field name="name">serial.printer.token.list</field>
            <field name="model">serial.printer.token</field>
            <field name="arch" type="xml">
                <list>
                    <field name="api_key"/>
                    <field name="username"/>
                    <field name="password"/>
                    <field name="token"/>
                    <field name="expiration"/>
                </list>
            </field>
        </record>

        <!-- Vista formulario -->
        <record id="view_form_serial_printer_token" model="ir.ui.view">
            <field name="name">serial.printer.token.form</field>
            <field name="model">serial.printer.token</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="api_key"/>
                            <field name="username"/>
                            <field name="password" password="True"/>
                            <field name="token"/>
                            <field name="expiration"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>